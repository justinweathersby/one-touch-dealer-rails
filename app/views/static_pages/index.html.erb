<!---************************* Contact Us ***********************************-->
<div class="contact-container section-container section-container-full-bg" id="contact">
  <div class="container">
      <div class="row">
          <div class="col-sm-12 contact section-description wow fadeIn">
              <h2>Schedule a Demo</h2>
              <p>
                We look forward to providing your Dealership with a Mobile App solution!
              </p>
          </div>
      </div>
      <div class="row">
          <div class="col-sm-8 col-sm-offset-2 contact-form wow fadeInLeft">
              <h3>Send us a message</h3>
              <%= form_tag contact_form_path, method: :post do %>
                <div class="form-group">
                  <label class="sr-only" for="contact-email">Contact Email</label>
                    <%= email_field_tag :email ,nil,placeholder: 'Email...', class: "form-control",required: true %>

                </div>
                <div class="form-group">
                  <label class="sr-only" for="contact-dealership-name">Dealership Name</label>
                    <%= text_field_tag :dealership_name ,nil,placeholder: 'Dealership...', class: "form-control",required: true %>

                </div>
                <div class="form-group">
                  <label class="sr-only" for="contact-dealership-website">Dealership Website</label>
                    <%= text_field_tag :dealership_website ,nil,placeholder: 'http://...', class: "form-control",required: true %>
                
                </div>
                <div class="form-group">
                  <label class="sr-only" for="contact-message">Message</label>
                    <%= text_area_tag :message ,nil,placeholder: 'Message...', id: "contact-message",class: "form-control",required: true %>

                </div>
                <%= submit_tag "Send message",class: "btn contact-btn" %>
              <% end %>
          </div>
      </div>
  </div>
</div>

